{
  "app_analysis": {
    "purpose": "Track fitness progress, workouts, nutrition, and body metrics in one place",
    "domain": "fitness",
    "data_density": "medium",
    "primary_users": "Fitness enthusiasts tracking their health journey",
    "key_metrics": [
      "Weekly workout count",
      "Daily calories vs goal",
      "Body weight progress",
      "Workout consistency"
    ],
    "primary_action": "Log workout or meal quickly",
    "emotional_tone": "energetic, motivating, achievement-focused"
  },
  "theme": {
    "mode": "dark",
    "font_family": "Space Grotesk",
    "font_url": "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;500;700;900&display=swap",
    "colors": {
      "background": "hsl(220 20% 8%)",
      "foreground": "hsl(220 10% 92%)",
      "primary": "hsl(26 90% 58%)",
      "accent": "hsl(165 75% 52%)",
      "muted": "hsl(220 15% 18%)",
      "positive": "hsl(142 70% 48%)",
      "negative": "hsl(0 70% 55%)",
      "card": "hsl(220 20% 12%)"
    },
    "background_style": "gradient",
    "background_css": "background: linear-gradient(180deg, hsl(220 20% 8%) 0%, hsl(220 25% 6%) 100%); background-image: radial-gradient(circle at 20% 10%, hsla(26, 90%, 58%, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 80%, hsla(165, 75%, 52%, 0.06) 0%, transparent 50%);"
  },
  "layout": {
    "kpi_cards": [
      {
        "title": "Diese Woche",
        "description": "Trainingseinheiten",
        "source_app": "workouts",
        "calculation": "count_this_week",
        "calculation_field": "datum",
        "icon": "Dumbbell",
        "format": "number",
        "trend_comparison": "vs_last_week"
      },
      {
        "title": "Heute",
        "description": "Kalorien / Ziel",
        "source_app": "ernaehrung",
        "calculation": "sum_today_vs_goal",
        "calculation_field": "kalorien",
        "icon": "Flame",
        "format": "calories",
        "trend_comparison": "vs_goal"
      },
      {
        "title": "Aktuell",
        "description": "KÃ¶rpergewicht",
        "source_app": "koerperdaten",
        "calculation": "latest",
        "calculation_field": "gewicht_kg",
        "icon": "Scale",
        "format": "weight",
        "trend_comparison": "vs_last_month"
      },
      {
        "title": "Streak",
        "description": "Tage Training",
        "source_app": "workouts",
        "calculation": "current_streak",
        "calculation_field": "datum",
        "icon": "TrendingUp",
        "format": "number",
        "trend_comparison": "none"
      }
    ],
    "main_chart": {
      "type": "area",
      "title": "Gewichtsverlauf (30 Tage)",
      "source_app": "koerperdaten",
      "x_axis": {
        "field": "datum",
        "label": "Datum"
      },
      "y_axis": {
        "field": "gewicht_kg",
        "label": "Gewicht (kg)"
      },
      "group_by": "day",
      "secondary_line": {
        "field": "kfa_geschaetzt",
        "label": "KFA %",
        "axis": "right"
      }
    },
    "secondary_sections": [
      {
        "type": "chart",
        "chart_type": "bar",
        "title": "Training nach Typ (7 Tage)",
        "source_app": "workouts",
        "x_axis": "typ",
        "y_axis": "count",
        "limit": 7
      },
      {
        "type": "list",
        "title": "Letzte Workouts",
        "source_app": "workouts",
        "fields": [
          "datum",
          "typ",
          "dauer_minuten",
          "stimmung"
        ],
        "sort_by": "datum",
        "sort_order": "desc",
        "limit": 5
      },
      {
        "type": "cards",
        "title": "Aktive Ziele",
        "source_app": "ziele",
        "filter": {
          "field": "status",
          "value": "aktiv"
        },
        "fields": [
          "taeglich_kalorien",
          "taeglich_protein",
          "trainingstage_pro_woche"
        ],
        "limit": 3
      }
    ],
    "primary_action_button": {
      "label": "Workout loggen",
      "action": "quick_log",
      "target_app": "workouts",
      "position": "floating"
    }
  },
  "animations": {
    "page_load": "stagger",
    "stagger_delay_ms": 80,
    "hover_effects": true,
    "card_hover": "lift"
  },
  "responsive": {
    "mobile_priority": [
      "kpi_cards",
      "primary_action",
      "main_chart"
    ],
    "hide_on_mobile": [],
    "mobile_navigation": "none"
  }
}
