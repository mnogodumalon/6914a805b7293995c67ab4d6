{
  "dashboard_name": "Fitness & Ernährungs-Tracker Dashboard",
  "description": "A comprehensive fitness and nutrition tracking dashboard showing workout progress, nutrition goals, body measurements, and training insights",

  "theme": {
    "primary_color": "blue",
    "accent_color": "green",
    "style": "modern_minimal",
    "reasoning": "Blue represents trust and fitness, green represents health and nutrition. Modern minimal style keeps focus on data and progress"
  },

  "layout": {
    "type": "multi_section",
    "sections": [
      {
        "id": "hero_kpis",
        "title": "Heute",
        "position": "top",
        "columns": 4,
        "description": "Today's key metrics at a glance"
      },
      {
        "id": "weekly_overview",
        "title": "Diese Woche",
        "position": "middle",
        "columns": 2,
        "description": "Weekly training and nutrition overview"
      },
      {
        "id": "progress_tracking",
        "title": "Fortschritt",
        "position": "bottom",
        "columns": 2,
        "description": "Long-term progress tracking"
      }
    ]
  },

  "kpis": [
    {
      "id": "today_workout",
      "title": "Heutiges Training",
      "data_source": "workouts",
      "calculation": "Check if there's a workout today (datum = today) and show type/duration or 'Ruhetag' if rest_day",
      "visualization": "stat_card",
      "icon": "Dumbbell",
      "color": "blue",
      "priority": 1
    },
    {
      "id": "today_calories",
      "title": "Kalorien Heute",
      "data_source": "ernaehrung",
      "calculation": "Sum of kalorien where datum = today",
      "visualization": "progress_ring",
      "target_source": "ziele.taeglich_kalorien",
      "show_percentage": true,
      "color": "orange",
      "priority": 2
    },
    {
      "id": "today_protein",
      "title": "Protein Heute",
      "data_source": "ernaehrung",
      "calculation": "Sum of protein where datum = today",
      "visualization": "progress_ring",
      "target_source": "ziele.taeglich_protein",
      "show_percentage": true,
      "color": "green",
      "priority": 3
    },
    {
      "id": "weekly_workouts",
      "title": "Trainings diese Woche",
      "data_source": "workouts",
      "calculation": "Count workouts where datum is in current week and rest_day = false",
      "visualization": "stat_card",
      "target_source": "ziele.trainingstage_pro_woche",
      "show_comparison": true,
      "icon": "Activity",
      "color": "blue",
      "priority": 4
    }
  ],

  "charts": [
    {
      "id": "workout_frequency",
      "title": "Trainingsfrequenz (Letzte 4 Wochen)",
      "type": "bar",
      "data_source": "workouts",
      "x_axis": "week",
      "y_axis": "count",
      "filters": {
        "rest_day": false,
        "date_range": "last_28_days"
      },
      "color": "blue",
      "position": "weekly_overview",
      "show_target_line": true,
      "target_source": "ziele.trainingstage_pro_woche"
    },
    {
      "id": "training_types_distribution",
      "title": "Trainingsarten (Letzter Monat)",
      "type": "pie",
      "data_source": "workouts",
      "group_by": "typ",
      "filters": {
        "rest_day": false,
        "date_range": "last_30_days"
      },
      "position": "weekly_overview"
    },
    {
      "id": "weight_progress",
      "title": "Gewichtsentwicklung",
      "type": "line",
      "data_source": "koerperdaten",
      "x_axis": "datum",
      "y_axis": "gewicht_kg",
      "filters": {
        "date_range": "last_90_days"
      },
      "color": "purple",
      "position": "progress_tracking",
      "show_trend": true
    },
    {
      "id": "nutrition_consistency",
      "title": "Ernährungsconsistenz (14 Tage)",
      "type": "bar",
      "data_source": "ernaehrung",
      "x_axis": "datum",
      "y_axis": ["kalorien", "protein"],
      "comparison_type": "stacked",
      "filters": {
        "date_range": "last_14_days"
      },
      "colors": ["orange", "green"],
      "position": "progress_tracking",
      "show_target_lines": true
    }
  ],

  "tables": [
    {
      "id": "recent_workouts",
      "title": "Letzte Trainings",
      "data_source": "workouts",
      "columns": [
        {
          "field": "datum",
          "label": "Datum",
          "format": "date_german"
        },
        {
          "field": "typ",
          "label": "Typ",
          "format": "lookup_label"
        },
        {
          "field": "dauer_minuten",
          "label": "Dauer",
          "format": "number_with_unit",
          "unit": "min"
        },
        {
          "field": "stimmung",
          "label": "Stimmung",
          "format": "badge"
        }
      ],
      "limit": 5,
      "sort": {
        "field": "datum",
        "order": "desc"
      },
      "position": "bottom_section"
    }
  ],

  "filters": {
    "date_range": {
      "enabled": true,
      "default": "last_30_days",
      "options": ["last_7_days", "last_14_days", "last_30_days", "last_90_days", "all_time"]
    }
  },

  "primary_action": {
    "type": "none",
    "reasoning": "This is a read-only analytics dashboard. Users input data via Living Apps interface."
  },

  "responsive_behavior": {
    "mobile": "Stack all cards vertically, reduce chart heights",
    "tablet": "2-column grid for KPIs, single column for charts",
    "desktop": "Full 4-column grid as specified"
  },

  "data_relationships": {
    "workout_logs_to_workouts": "workout_logs.workout -> workouts (applookup)",
    "workout_logs_to_uebungen": "workout_logs.uebung -> uebungen (applookup)",
    "notes": "These relationships allow showing exercise details within workout context"
  },

  "empty_states": {
    "no_workouts": "Noch keine Trainings erfasst. Starte dein erstes Training!",
    "no_nutrition": "Keine Mahlzeiten erfasst. Tracke deine Ernährung!",
    "no_goals": "Keine Ziele definiert. Setze dir Ziele!",
    "no_body_data": "Keine Körperdaten erfasst. Tracke deinen Fortschritt!"
  },

  "ui_specifications": {
    "card_style": "border rounded-lg with hover shadow",
    "spacing": "consistent 4-unit grid (16px base)",
    "typography": {
      "headings": "font-bold text-2xl",
      "subheadings": "font-semibold text-lg",
      "body": "text-sm",
      "numbers": "text-3xl font-bold for KPIs"
    },
    "loading_states": "Skeleton loaders for all cards",
    "error_handling": "Toast notifications for errors"
  }
}
